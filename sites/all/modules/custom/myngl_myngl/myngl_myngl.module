  $invitee = _myngl_myngl_get_invitee_id($myngl_id, $user_id);

  $myngl = node_load($myngl_id);

  $dates = array();

  foreach ($myngl->field_myngl_dates['und'] as $d) :
    $dates[$d['value']] = myngl_long_date($d['value']);
  endforeach;

  $form['date'] = array(
